# Cron files
files:
    "/etc/cron.d/moodle-cron":
        mode: "000644"
        owner: root
        group: root
        content: |
            * * * * *  root . /opt/elasticbeanstalk/support/envvars && /usr/bin/php /var/www/html/admin/cli/cron.php > /dev/null && curl -sm 30 k.wdt.io/your@mail.com/MoodleCron?c=*_*_*_*_*
 
commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/*.bak"